{
    "$schema": "https://json-schema.org/draft-07/schema",
    "title": "Test Case",
    "description": "A Test Case for the Testiny Test Case Management",
    "type": "object",
    "required": [
        "preconditions",
        "steps",
        "expected results"
    ],
    "properties": {
        "preconditions": {
            "description": "The preconditions of the test case",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "steps": {
            "description": "The steps of the test case",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "expected results": {
            "description": "The expected results of the test case",
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1
        }
    }
}